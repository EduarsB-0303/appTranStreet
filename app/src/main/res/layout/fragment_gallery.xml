<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@color/colorPrimaryLight"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Ramon Freire 2450"
                android:textColor="#F3FAF3"
                android:textSize="34sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/idLinea1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Linea A"
                android:textColor="#FAF7F7"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/idLinea2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Linea F"
                android:textColor="#FAF7F7"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/idTarifaN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Tarifa Normal: $500"
                android:textColor="#FAF7F7"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idTarifaE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-20dp"
                android:text="Tarifa Estudiantil: $150"
                android:textColor="#FAF6F6"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"
            tools:layout_editor_absoluteX="-40dp"
            tools:layout_editor_absoluteY="598dp"  />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idNombre1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Hospital Carlos Cisterna"
                android:textColor="#F3FAF3"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idLinea3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Linea X"
                android:textColor="#FAF7F7"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idLinea5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Linea X"
                android:textColor="#FAF7F7"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idLinea4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Linea F"
                android:textColor="#FAF7F7"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idTarifaN1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Tarifa Normal: $500"
                android:textColor="#FAF7F7"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idTarifaE1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-19dp"
                android:text="Tarifa Estudiantil: $150"
                android:textColor="#FAF6F6"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#070B0D"
            tools:layout_editor_absoluteX="-40dp"
            tools:layout_editor_absoluteY="598dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>